                    &lt;rn:widget path="okcs/OkcsRecentlyViewedContent"/&gt;
                &lt;/div&gt;
            &lt;/div&gt;
        &lt;/div&gt;
        &lt;aside class="rn_SideRail" role="complementary"&gt;
            &lt;rn:widget path="utils/ContactUs" channels="question,chat,feedback"/&gt;
